<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/back_button_piechart"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:icon="@drawable/back_icn"
        app:iconGravity="top"
        app:iconSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_piechart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button_piechart"
        android:text="Activity types over the past month"
        android:textAlignment="center"
        android:layout_marginVertical="10dp"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_medium"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/PieChart"
        android:layout_width="match_parent"
        android:layout_height="572dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_piechart_title" />

</androidx.constraintlayout.widget.ConstraintLayout>